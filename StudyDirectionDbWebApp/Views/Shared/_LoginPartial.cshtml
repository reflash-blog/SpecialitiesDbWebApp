@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{

    <li class="dropdown">
        <a href="#" class="dropdown-toggle account" data-toggle="dropdown">
            <div class="avatar">
                <img src="~/Content/img/avatar.png" class="img-rounded" alt="avatar" />
            </div>
            <i class="fa fa-angle-down pull-right"></i>
            <div class="user-mini pull-right">
                <span class="welcome">Welcome,</span>
                <span>@User.Identity.GetUserName()</span>
            </div>
        </a>
        <ul class="dropdown-menu">
            <li>
                <a href="~/Manage/Index">
                    <i class="fa fa-user"></i>
                    <span>Профиль</span>
                </a>
            </li>
            <li>
                <a href="~/Log/Index" class="ajax-link">
                    <i class="fa fa-envelope"></i>
                    <span>Сообщения</span>
                </a>
            </li>
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()">
                    <i class="fa fa-power-off"></i>
                    <span>Выход</span>
                </a>
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm"}))
                {
                    @Html.AntiForgeryToken()

                }
            </li>
        </ul>
    </li>

}
else
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle account" data-toggle="dropdown">
            <div class="user-mini pull-right">
                <span class="welcome">Войти</span>
                <span> или зарегистрироваться</span>
            </div>
        </a>
        <ul class="dropdown-menu">
            <li>
                @Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
            </li>
            <li>
                @Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
            </li>
        </ul>
    </li>
   
}


