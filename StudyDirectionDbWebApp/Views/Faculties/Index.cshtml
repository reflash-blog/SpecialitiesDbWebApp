@model IEnumerable<StudyDirectionDbWebApp.Models.Faculty>

@{
    ViewBag.Title = "Список";
}

<p>
    @Html.ActionLink("Добавить", "Create",null,new {@class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Номер факультета")
        </th>
        <th>
            @Html.DisplayName("Название")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FacultyId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id = item.FacultyId }, new { @class = "btn btn-default" }) 
            @Html.ActionLink("Подробнее", "Details", new { id = item.FacultyId }, new { @class = "btn btn-default" }) 
            @Html.ActionLink("Удалить", "Delete", new { id = item.FacultyId }, new { @class = "btn btn-default" })
        </td>
    </tr>
}

</table>
