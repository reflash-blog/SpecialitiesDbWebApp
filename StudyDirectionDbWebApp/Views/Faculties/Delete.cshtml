@model StudyDirectionDbWebApp.Models.Faculty

@{
    ViewBag.Title = "Удаление";
}


<h3>Вы уверены, что хотите удалить факультет?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Номер")
        </dt>
        <dt>
            @Html.DisplayName("Название")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FacultyId)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> 
            @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
