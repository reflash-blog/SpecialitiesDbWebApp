@using StudyDirectionDbWebApp.Models
@{
    ViewBag.Title = "Основная панель";
    var db = new StudyDirectionDbEntities1();
}

<div class="row">
    <div class="col-xs-12 col-sm-4">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-calendar-o"></i>
                    <span>Статистика по таблицам</span>
                </div>
                <div class="box-icons pull-right">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content">
                <table id="ticker-table" class="table m-table table-bordered table-hover table-heading">
                    <thead>
                    <tr>
                        <th>Таблица</th>
                        <th>Число записей</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td class="m-ticker"><b>Факультеты</b></td>
                        <td class="m-price">@db.Faculties.Count()</td>

                    </tr>
                    <tr>
                        <td class="m-ticker"><b>Кафедры</b></td>
                        <td class="m-price">@db.Chairs.Count()</td>
                    </tr>
                    <tr>
                        <td class="m-ticker"><b>Специальности</b></td>
                        <td class="m-price">@db.Specialities.Count()</td>
                    </tr>
                    <tr>
                        <td class="m-ticker"><b>Направления подготовки</b></td>
                        <td class="m-price">@db.StudyDirections.Count()</td>
                    </tr>
                    <tr>
                        <td class="m-ticker"><b>Группы</b></td>
                        <td class="m-price">@db.Groups.Count()</td>
                    </tr>
                    <tr>
                        <td class="m-ticker"><b>Формы подготовки</b></td>
                        <td class="m-price">@db.StudyForms.Count()</td>
                    </tr>
                    <tr>
                        <td class="m-ticker"><b>Студенты</b></td>
                        <td class="m-price">@db.Students.Count()</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-xs-8">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-home"></i>
                    <span>Контакты</span>
                </div>
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content">
                <div class="card">
                    <h4 class="page-header">Санкт-Петербургский Государственный Технологический Университет (Технологический Институт)</h4>
                    <p>
                        <span>+7 (812) 494-92-99</span> <br>
                        <a href="mailto:office@technolog.edu.ru">office@technolog.edu.ru</a>
                    </p>
                </div>
                <div class="card address">
                    <h4 class="page-header">Наш адрес:</h4>
                    <p>
                        <span>190013, Россия, Санкт-Петербург,</span> <br>
                        <span>Московский проспект, дом 26</span>
                    </p>
                </div>

            </div>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-xs-12 col-sm-6">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-eye"></i>
                    <span>Лог соединений с базой</span>
                </div>
                <div class="box-icons pull-right">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content">
                @{ int counter = 0;}
                @foreach (var log in db.Logs.OrderByDescending(x => x.LogId).Take(10))
                {
                    counter++;
                    <div>
                        <a href="@Url.Action("Index", "Log", new {id = counter})">
                            <i class="fa fa-envelope"></i>
                            <span>@log.Message</span>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

</div>

<script type="text/javascript">
    // Load OpenLayers library and create test map
    function OpenLayersMap() {
        $.getScript('http://www.openlayers.org/api/OpenLayers.js', LoadTestMap);
    }
    $(document).ready(function () {
        // Load Google Map API and callback to OpenLayers
        $.getScript('http://maps.google.com/maps/api/js?sensor=false&callback=OpenLayersMap');
        // Add Drag-n-Drop feature
        WinMove();
    });
</script>