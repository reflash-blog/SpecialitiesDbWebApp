@model IEnumerable<StudyDirectionDbWebApp.Models.Chair>

@{
    ViewBag.Title = "Список";
}
<p>
    @Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Название кафедры")
        </th>
        <th>
            @Html.DisplayName("Название факультета")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ChairName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Faculty.Name)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id = item.ChairId }, new { @class = "btn btn-default" })
            @Html.ActionLink("Подробнее", "Details", new { id = item.ChairId }, new { @class = "btn btn-default" })
            @Html.ActionLink("Удалить", "Delete", new { id = item.ChairId }, new { @class = "btn btn-default" })
        </td>
    </tr>
}

</table>
